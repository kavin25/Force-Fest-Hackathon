<div class="login-div">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="login-input"
  />
</div>
<div class="login-div">
  <label for="description">Description</label>
  <textarea
    style="resize: none"
    type="text"
    name="description"
    id="description"
    class="login-input"
  >
    <%= article.description %></textarea
  >
</div>
<div class="login-div">
  <label for="markdown">Markdown</label>
  <textarea
    style="resize: none"
    required
    name="markdown"
    id="markdown"
    class="login-input"
  >
<%= article.markdown %></textarea
  >
</div>

<a
  href="/dashboard/articles"
  style="
    text-decoration: none;
    font-size: 1rem;
    margin-left: 0.5rem;
    color: #333;
    font-weight: bold;
  "
  >Cancel</a
>
<button
  type="submit"
  style="
    background-color: transparent;
    outline: none;
    border: none;
    margin-left: 1rem;
    color: #333;
    cursor: pointer;
    font-size: 1rem;
  "
>
  Save
</button>
