<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js & Passport App</title>
  </head>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
    }

    body {
      margin-bottom: 4rem;
    }
    .nav-out {
      padding: 1rem;
      border-bottom: 1px solid black;
      position: fixed;
      top: 0;
      width: 100%;
    }

    #page {
      text-decoration: underline;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
    }

    .logo img {
      height: 3.5rem;
      border-radius: 10px;
      margin-left: 7rem;
      cursor: pointer;
    }

    .scroll {
      background-color: #333;
      color: whitesmoke;
      transition-duration: 0.5s;
      z-index: 1;
    }

    .scroll .navbar .links a {
      color: whitesmoke;
    }

    .links {
      margin-right: 3rem;
      margin-top: auto;
      margin-bottom: auto;
    }

    .nav-link {
      text-decoration: none;
      /* background-color: red; */
      padding: 0.5rem 1rem;
      margin-left: 0.7rem;
      border-radius: 5px;
      font-size: 1.2rem;
      color: #333;
    }

    .nav-link:hover {
      transition-duration: 0.7s;
      background-color: #ffd300;
      color: whitesmoke;
    }

    .login-card-outer {
      display: flex;
      justify-content: center;
      align-self: center;
      align-items: center;
    }

    .login-card-out {
      margin-top: 13rem;
      width: 35%;
      border: 1px solid #333;
      display: flex;
      margin-left: auto;
      margin-right: auto;
      flex-direction: column;
      padding: 1rem;
    }
    .login-div {
      width: 100%;
    }

    .login-input {
      width: 100%;
      height: 2rem;
      margin-top: 0.3rem;
      padding-left: 0.6rem;
      border-radius: 5px;
      border: 1px solid lightgrey;
      margin-bottom: 1rem;
    }

    .login-input:focus {
      border: 2px solid #eb6864;
      border-radius: 5px;
      outline: none;
    }

    .login-submit-btn {
      width: 100%;
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;
      cursor: pointer;
      background-color: #eb6864;
      outline: none;
      border: none;
      border-radius: 5px;
      color: whitesmoke;
    }

    label {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }
    .bottom-text {
      text-align: center;
      margin-top: 1rem;
    }
  </style>
  <body>
    <div class="nav-out">
      <div class="navbar">
        <div class="logo">
          <img src="../images/healthcare.png" alt="onno the image didnt load" />
        </div>
        <div class="links">
          <a class="nav-link" id="page" href="/">Home</a>
          <a class="nav-link" href="/about">About</a>
          <a class="nav-link" href="/users/login">Login</a>
          <a class="nav-link" href="/users/register">Signup</a>
        </div>
      </div>
    </div>

    <%- body %>

    <script>
      const header = document.querySelector(".nav-out");
      window.addEventListener("scroll", () => {
        const scrollPos = window.scrollY;
        if (scrollPos > 100) {
          header.classList.add("scroll");
          console.log("bo");
        } else {
          header.classList.remove("scroll");
        }
      });
    </script>
  </body>
</html>
