  <style>
    * {
      box-sizing: border-box;
      margin: 0;
    }

    body {
      font-family: "Nunito Sans", sans-serif;
    }
    .nav-out {
      padding: 1rem;
      position: fixed;
      top: 0;
      width: 100%;
    }

    #page {
      font-weight: bold;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
    }

    .logo img {
      height: 5rem;
      border-radius: 10px;
      margin-left: 2.5rem;
      cursor: pointer;
    }

    .scroll {
      background-color: #333;
      color: whitesmoke;
      transition-duration: 0.5s;
      z-index: 1;
    }

    .scroll .navbar .links a {
      color: whitesmoke;
    }

    .links {
      margin-right: 3rem;
      margin-top: auto;
      margin-bottom: auto;
    }

    .nav-link {
      text-decoration: none;
      /* background-color: red; */
      padding: 0.5rem 1rem;
      margin-left: 0.7rem;
      border-radius: 5px;
      font-size: 1.3rem;
      color: #333;
    }

    .nav-link:hover {
      transition-duration: 0.7s;
      background-color: #8dd1c6;
      color: whitesmoke;
    }

    .login-card-outer {
      display: flex;
      justify-content: center;
      align-self: center;
      align-items: center;
    }

    .login-card-out {
      margin-top: 13rem;
      width: 35%;
      border: 1px solid #333;
      border-radius: 5px;
      display: flex;
      margin-left: auto;
      margin-right: auto;
      flex-direction: column;
      padding: 1rem;
    }
    .login-div {
      width: 100%;
    }

    .login-input {
      width: 100%;
      height: 2rem;
      margin-top: 0.3rem;
      padding-left: 0.6rem;
      border-radius: 5px;
      border: 1px solid lightgrey;
      margin-bottom: 1rem;
    }

    .login-input:focus {
      border: 2px solid #8dd1c6;
      border-radius: 5px;
      outline: none;
    }

    .login-submit-btn {
      width: 100%;
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;
      cursor: pointer;
      background-color: #8dd1c6;
      outline: none;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      font-weight: bold;
      color: #333;
    }

    label {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }
    .bottom-text {
      text-align: center;
      margin-top: 1rem;
    }
    .dash-main-div-heading {
      display: flex;
      align-items: center;
      flex-direction: column;
    }
    .dash-main-div-heading h1 {
      font-size: 2.5rem;
    }
    .dash-main-div-heading p {
      font-size: 1.5rem;
    }
    .dash-row {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      margin-top: 4rem;
    }
    .dash-row-div {
      width: 20%;
      text-align: center;
      border: 1px solid #333;
    }
    .dash-row-div-1 img {
      width: 100%;
    }
    .dash-row-div-1 h2 {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
    .dash-row-div-1:hover {
      background-color: #8dd1c6;
      transition-duration: 1s;
      cursor: pointer;
    }
    #dash-row2 {
      justify-content: space-around;
    }

    .section-5-big-div {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      padding: 2rem;
    }

    .fa-facebook,
    .fa-twitter,
    .fa-linkedin,
    .fa-youtube {
      margin: 1rem;
      font-size: 1.4rem;
      cursor: pointer;
    }

    .fa-facebook:hover {
      color: #4267b2;
    }
    .fa-twitter:hover {
      color: #00acee;
    }
    .fa-linkedin:hover {
      color: #0077b5;
    }
    .fa-youtube:hover {
      color: #ff0000;
    }

    .section-5-big-div-right-div-h2 {
      text-align: center;
      font-size: 1.3rem;
      font-family: monospace;
    }
    .section-5-big-div-left-div-h2 {
      font-size: 1.8rem;
    }

    .section-5-big-div-left-div-p {
      font-size: 1rem;
    }

    .footer {
      margin-top: 5rem;
      background-color: #8dd1c6;
      color: white;
    }
    .api-form{
      border: 1px solid #333; 
      display: flex;
      flex-direction: column;
      width: 30%;
      margin-top: 5rem;
      padding: 1rem;
      text-align: center;
      margin-left: auto;
      margin-right: auto;
    }
    .api-form-div{
      width: 100%;
    }
    .api-pin, .notifs-textarea{
      width: 100%;
      height: 2rem;
      margin-top: 0.3rem;
      padding-left: 0.6rem;
      border-radius: 5px;
      border: 1px solid lightgrey;
      margin-bottom: 1rem;
    }
    .api-pin:focus, .notifs-textarea:focus{
      border: 2px solid #8dd1c6;
      border-radius: 5px;
      outline: none;
    }
    .api-submit{
      width: 100%;
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;
      cursor: pointer;
      background-color: #8dd1c6;
      outline: none;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      font-weight: bold;
      color: #333;
    }
    .center-div-data{
      display: flex;
      justify-content: center;
      align-items: center;
      align-self: center;
      align-content: center;
      flex-direction: column;
      margin-left: auto;
      margin-right: auto;
      padding: 1rem;
      border-radius: 10px;
      border: 1px solid #333;
      width: 45%;
      line-height: 2;
    }

    .api-sessions-data{
      display: flex;
      justify-content: center;
      align-items: center;
      align-self: center;
      align-content: center;
      flex-direction: column;
      margin-left: auto;
      margin-right: auto;
      padding: 1rem;
      border-radius: 10px;
      border: 1px solid #333;
      width: 30%;
    }


    .left-nav{
      background-color: black;
      width: 15%;
      top: 25%;
      position: fixed;
      height: 55%;
    }
    .left-nav-div{
      display: flex;
      flex-direction: column;
      align-content: center;
      align-items: center;
      align-self: center;
      justify-content: center;
      padding-top: 2.5rem;
    }
    .left-nav-div a{
      padding: 1rem;
      color: whitesmoke;
      text-decoration: none;
      font-size: 1.3rem;
    }

    .notifs-form{
      border: 1px solid #333; 
      display: flex;
      flex-direction: column;
      width: 40%;
      margin-top: 5rem;
      padding: 1rem;
      margin-left: auto;
      margin-right: auto
    }

    .notifs-textarea{
      resize: none;
    }

    .notifs-list{
      display: flex;
      flex-direction: column;
    }
    .notifs-list-text{
      font-size: 1rem;
      margin-top: 0.15rem;
      display: flex;
      justify-content: space-between;
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 0.3rem;
      padding-bottom: 0.3rem;
      background-color: lightgrey;
      margin-bottom: 0.5rem;
    }
.notifs-sched-btn{
  cursor: pointer;
  background-color: transparent;
  outline: none;
  border: none;
}

.blog-main-h1{
  text-align: center;
}
.blog-card{
  display: flex;
  justify-content: center;
}
.blog-new-btn{
  text-align: center;
}
.blog-card-inner{
  width: 25%;
  padding: 1rem;
  border: 1px solid black;
  margin-top: 2rem;
  display: flex;
  justify-content: center;
  align-self: center;
  align-content: center;
  flex-direction: column;
  line-height: 2;
}

.blog-each-btn{
  display: flex;
  margin-top: 0.5rem;
}

.blog-title{
  font-size: 1.3rem;
}
.blog-each-btn-a{
  text-decoration: none;
  cursor: pointer;
  color: #333;
  margin-right: 1.5rem;
}
.blog-btn-delete{
  border: none;
  cursor: pointer;
  color: #333;
  background-color: transparent;

}
.blog-main-h1 a{
  margin-top: 1rem;
  text-decoration: none;
  color: #333;
  background-color: #8dd1c6;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  padding-left: 1rem;
  padding-right: 1rem;
  border-radius: 10px;
}
.blog-main-h1 h1{
margin-bottom: 1rem;
}

.articles-btn{
  color: #333;
}
.articles-btn:hover{
  text-decoration: none;
}
.main-articles-big-div{
  display: flex;
  flex-direction: column;
}
.transport-main-div{
  display: flex;
  margin-left: 17%;
  margin-top:  10rem;
}

.transport-main-img{
  width: 60%;
}
.transport-main-form{
  display: flex;
  justify-content: center;
  align-self: center;
  align-items: center;
  align-content: center;
  flex-direction: column;
  margin-left: auto;
  margin-right: auto;
}
.transport-main-input{
  margin-top: 2rem;
  border: 1px solid #8dd1c6;
  width: 25rem;
  height: 2.5rem;
  border-radius: 5px;
}

.transport-main-input::placeholder{
  padding-left: 0.5rem;
}

.dash-img{
  width: 100%;
  height: 15rem;
}
  </style>
